---
interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  class?: string;
}
const { id, title, subtitle } = Astro.props as Props;
---
<section id={id} class={`py-16 md:py-24`}>
  {title && (
    <header class="mb-8">
      <h2 class="font-display text-gradient">{title}</h2>
      {subtitle && <p class="mt-2 text-slate-300">{subtitle}</p>}
    </header>
  )}
  <slot />
</section>